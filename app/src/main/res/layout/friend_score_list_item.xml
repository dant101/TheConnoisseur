<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/friend_score_item"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tomek"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/xlarge_padding"
        android:layout_marginTop="@dimen/normal_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/xlarge_padding"
        android:paddingRight="@dimen/xlarge_padding"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/best_word_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="4">

                <ImageView
                    android:id="@+id/heart_best_1"
                    android:layout_width="@dimen/hearts_width_small"
                    android:layout_height="@dimen/hearts_height_small"
                    android:src="@drawable/heart_green_black"/>

                <ImageView
                    android:id="@+id/heart_best_2"
                    android:layout_width="@dimen/hearts_width_small"
                    android:layout_height="@dimen/hearts_height_small"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:layout_marginRight="@dimen/small_margin"
                    android:src="@drawable/heart_green_black"/>

                <ImageView
                    android:id="@+id/heart_best_3"
                    android:layout_width="@dimen/hearts_width_small"
                    android:layout_height="@dimen/hearts_height_small"
                    android:src="@drawable/heart_green_black"/>

            </LinearLayout>



            <ImageView
                android:id="@+id/best_word_language"
                android:layout_width="@dimen/hearts_width_small"
                android:layout_height="@dimen/hearts_height_small"
                android:layout_marginLeft="@dimen/normal_margin"
                android:layout_marginRight="@dimen/normal_margin"
                android:src="@drawable/flag_random"/>

            <TextView
                android:id="@+id/best_word"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/normal_margin"
                android:text="Peloton"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/worst_word_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="4">

                <ImageView
                    android:id="@+id/heart_worst_1"
                    android:layout_width="@dimen/hearts_width_small"
                    android:layout_height="@dimen/hearts_height_small"
                    android:src="@drawable/heart_green_black"/>

                <ImageView
                    android:id="@+id/heart_worst_2"
                    android:layout_width="@dimen/hearts_width_small"
                    android:layout_height="@dimen/hearts_height_small"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:layout_marginRight="@dimen/small_margin"
                    android:src="@drawable/heart_green_black"/>

                <ImageView
                    android:id="@+id/heart_worst_3"
                    android:layout_width="@dimen/hearts_width_small"
                    android:layout_height="@dimen/hearts_height_small"
                    android:src="@drawable/heart_green_black"/>

            </LinearLayout>



            <ImageView
                android:id="@+id/worst_word_language"
                android:layout_width="@dimen/hearts_width_small"
                android:layout_height="@dimen/hearts_height_small"
                android:layout_marginLeft="@dimen/normal_margin"
                android:layout_marginRight="@dimen/normal_margin"
                android:src="@drawable/flag_random"/>

            <TextView
                android:id="@+id/worst_word"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/normal_margin"
                android:text="Peloton"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>