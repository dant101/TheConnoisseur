<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/normal_padding"
    android:background="@drawable/gradient_selector">

    <ImageButton
        android:layout_width="@dimen/home_icon_width"
        android:layout_height="@dimen/home_icon_width"
        android:src="@drawable/ui_back"
        android:background="@android:color/transparent"
        android:onClick="goBack"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:orientation="vertical"
        android:layout_marginLeft="-20dp"
        android:layout_marginRight="-20dp"
        android:gravity="center|top">

        <RelativeLayout
            android:layout_width="@dimen/ring_diameter"
            android:layout_height="@dimen/ring_diameter">

            <ImageView
                android:id="@+id/language_image"
                android:layout_width="@dimen/language_width"
                android:layout_height="@dimen/language_height"
                android:src="@drawable/flag_random"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:layout_width="@dimen/ring_diameter"
                android:layout_height="@dimen/ring_diameter"
                android:src="@drawable/ring"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/language"
                android:text="@string/russia"
                android:textAllCaps="true"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/session"
                android:text="Session 12"
                android:textSize="@dimen/text_vsmall"/>

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(8/10 passed)"
                android:textSize="@dimen/text_vsmall"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/connoisseur_image"
            android:layout_width="@dimen/connoisseur_head_diameter"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:src="@drawable/face_connoisseur"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/you_have_the_tongue"/>

        <TextView
            android:id="@+id/tongue_type"
            android:layout_margin="@dimen/small_margin"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="Connoisseur"
            android:textSize="@dimen/text_large"/>

        <TextView
            android:id="@+id/tongue_description"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/small_margin"
            android:text="@string/connoisseur_description"
            android:textStyle="bold|italic"/>

        <TextView
            android:id="@+id/best_worst_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal_best_worst"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/xlarge_padding"
            android:paddingRight="@dimen/xlarge_padding"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/best_word_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="4">

                    <ImageView
                        android:id="@+id/heart_best_1"
                        android:layout_width="@dimen/hearts_width_small"
                        android:layout_height="@dimen/hearts_height_small"
                        android:src="@drawable/heart_green_black"/>

                    <ImageView
                        android:id="@+id/heart_best_2"
                        android:layout_width="@dimen/hearts_width_small"
                        android:layout_height="@dimen/hearts_height_small"
                        android:layout_marginLeft="@dimen/small_margin"
                        android:layout_marginRight="@dimen/small_margin"
                        android:src="@drawable/heart_green_black"/>

                    <ImageView
                        android:id="@+id/heart_best_3"
                        android:layout_width="@dimen/hearts_width_small"
                        android:layout_height="@dimen/hearts_height_small"
                        android:src="@drawable/heart_green_black"/>

                </LinearLayout>



                <ImageView
                    android:id="@+id/best_word_language"
                    android:layout_width="@dimen/hearts_width_small"
                    android:layout_height="@dimen/hearts_height_small"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:layout_marginRight="@dimen/normal_margin"
                    android:src="@drawable/flag_random"/>

                <TextView
                    android:id="@+id/best_word"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:text="Peloton"/>


             </LinearLayout>

            <LinearLayout
                android:id="@+id/worst_word_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="4">

                    <ImageView
                        android:id="@+id/heart_worst_1"
                        android:layout_width="@dimen/hearts_width_small"
                        android:layout_height="@dimen/hearts_height_small"
                        android:src="@drawable/heart_green_black"/>

                    <ImageView
                        android:id="@+id/heart_worst_2"
                        android:layout_width="@dimen/hearts_width_small"
                        android:layout_height="@dimen/hearts_height_small"
                        android:layout_marginLeft="@dimen/small_margin"
                        android:layout_marginRight="@dimen/small_margin"
                        android:src="@drawable/heart_green_black"/>

                    <ImageView
                        android:id="@+id/heart_worst_3"
                        android:layout_width="@dimen/hearts_width_small"
                        android:layout_height="@dimen/hearts_height_small"
                        android:src="@drawable/heart_green_black"/>

                </LinearLayout>



                <ImageView
                    android:id="@+id/worst_word_language"
                    android:layout_width="@dimen/hearts_width_small"
                    android:layout_height="@dimen/hearts_height_small"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:layout_marginRight="@dimen/normal_margin"
                    android:src="@drawable/flag_random"/>

                <TextView
                    android:id="@+id/worst_word"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:text="Peloton"/>


            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_margin="@dimen/small_margin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FRIENDS SCORES HERE"/>


        </LinearLayout>

        <Button
            android:id="@+id/play_new_session"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="@string/play_new_session"
            android:onClick="goBack"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/connoisseur_side"
            android:layout_width="30dp"
            android:layout_height="150dp"
            android:src="@drawable/logo_2"/>


    </LinearLayout>


</LinearLayout>