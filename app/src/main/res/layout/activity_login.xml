<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient_selector"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity">

    <Button
        android:onClick="click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_exercise"
        android:id="@+id/button"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:onClick="downloadTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/download_test"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/button"
        android:id="@+id/button2" />

    <Button
        android:id="@+id/main_menu"
        android:onClick="main_menu_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:text="MAIN MENU"
        android:layout_alignLeft="@+id/button"/>

    <ImageView
        android:id="@+id/test_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/main_menu"
        android:src="@drawable/russia"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Miscellaneous"
        android:id="@+id/button3"
        android:layout_above="@+id/test_image"
        android:layout_alignLeft="@+id/button2"
        android:layout_toRightOf="@+id/main_menu"
        android:layout_alignRight="@+id/button2" />

</RelativeLayout>
